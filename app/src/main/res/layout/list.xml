<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:padding="8dp"
        android:elevation="3dp"
        android:layout_margin="7dp"
        android:outlineSpotShadowColor="#6B000000"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/num_background"
            android:gravity="center">



            <TextView
                android:id="@+id/chapterNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold"
                android:fontFamily="@font/main"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chapterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/roboto"
                android:text="@string/app_name"
                android:textColor="?attr/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewOnline"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/view_online"
                    app:cardCornerRadius="7dp"
                    android:layout_marginStart="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_online"
                        android:fontFamily="@font/main2"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:textColor="@color/white"/>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/hdpdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/hd_pdf"
                    app:cardCornerRadius="7dp"

                    android:layout_marginStart="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hd_pdf"
                        android:fontFamily="@font/main2"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/white"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>

